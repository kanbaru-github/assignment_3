<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model:@user, local:true do |f| %>
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のerrorが発生しました
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <div class="form-group"><br>
        <lavel for="user_name">Name</lavel><br>
        <%= f.text_field :name, id:"user_Name", placeholder:"名前" %><br>
      </div>
      <div class="form-group"><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
      </div>
      <div class="form-group"><br>
        <lavel for="user_introduction">Introduction</lavel><br>
        <%= f.text_field :introduction, placeholder: "プロフィール紹介文" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
